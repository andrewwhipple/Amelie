mixin post(post)
    div(class="am-post")
        h1(class="am-post-title") 
            a(href= post.metadata.link) #{post.metadata.title}
        p(class="am-post-pub-date") 
            em Published #{post.metadata.date}
        div(class="am-post-content")
            div !{post.content}

